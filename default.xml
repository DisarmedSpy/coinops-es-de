<!--
    Variant - Default
-->

<theme>
    <include>./simple.xml</include>
    
        <view name="system">
            <image name="systembackgroundoverlay">
                <path>${rootpath}/_inc/images/paneloverlay.png</path>
            </image>
            <carousel name="systemCarousel">
                <pos>0 0.45</pos>
            </carousel>
            <text name="system-description">
                <text>${systemDescription}</text>
                <pos>0.1 0.77</pos>
                <size>0.5 0.18</size>
                <fontSize>0.024</fontSize>
                <lineSpacing>1.1</lineSpacing>
                <color>BBBBBB</color>
                <verticalAlignment>top</verticalAlignment>
                <container>true</container>
             </text>
             <text name="gameCount">
                <pos>0.75 0.85</pos>
                <size>0.2 0.2</size>
                <systemdata>gamecount</systemdata>
                <fontSize>0.024</fontSize>
                <lineSpacing>1.1</lineSpacing>
                <horizontalAlignment>right</horizontalAlignment>
                <color>BBBBBB</color>
             </text>
        </view>


        <view name="gamelist">
            <image name="fanarthue">
                <pos>1 1</pos>
                <origin>1 1</origin>
                <maxSize>1 1</maxSize>
                <path>${rootpath}/_inc/images/fanarthue.png</path>
                <zIndex>21</zIndex>
            </image>
            <image name="overbar">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/_inc/images/overbar.png</path>
                <zIndex>60</zIndex>
            </image>
            <image name="cover">
                <pos>.58 .99</pos>
                <origin>.5 1</origin>
                <maxSize>.18 .30</maxSize>
                <imageType>cover</imageType>
                <zIndex>65</zIndex>
            </image>
            <text name="nametext">
                <pos>0.01 .825</pos>
                <size>.44 0</size>
                <metadata>name</metadata>
                <container>true</container>
                <containerStartDelay>1</containerStartDelay>
                <containerResetDelay>2</containerResetDelay>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <color>BBBBBB</color>
                <zIndex>65</zIndex>
            </text>
            <badges name="badges">
                <pos>0.502 .871</pos>
                <origin>1 .5</origin>
                <size>.067 .067</size>
                <horizontalAlignment>right</horizontalAlignment>
                <direction>row</direction>
                <lines>1</lines>
                <slots>favorite</slots>
                <customBadgeIcon badge="favorite">${rootpath}/_inc/images/yes.png</customBadgeIcon>
                <controllerPos>0.5 0.572</controllerPos>
                <controllerSize>0.81</controllerSize>
                <folderLinkPos>0.54 0.64</folderLinkPos>
                <folderLinkSize>0.31</folderLinkSize>
                <itemMargin>-1.0 0.005</itemMargin>
                <zIndex>65</zIndex>
            </badges>
            <text name="descriptiontext">
                <pos>0.01 .8879</pos>
                <size>.47 .1222</size>
                <metadata>description</metadata>
                <container>true</container>
                <fontSize>.019</fontSize>
                <color>BBBBBB</color>
                <lineSpacing>1.1</lineSpacing>
                <zIndex>65</zIndex>
            </text>

            <rating name="ratinggraphic">
                <pos>.6765 .865</pos>
                <origin>0 0.5</origin>
                <size>0 0.04</size>
                <filledPath>${rootpath}/_inc/images/star_filled.svg</filledPath>
                <unfilledPath>${rootpath}/_inc/images/star_unfilled.svg</unfilledPath>
                <zIndex>65</zIndex>
            </rating>
            <image name="players-icon">
                <pos>.68 .9</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/_inc/images/icon-players.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </image>
            <text name="players">
                <pos>.7 .9</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontSize>.02</fontSize>
                <metadata>players</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            <image name="developer-icon">
                <pos>.68 .935</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/_inc/images/icon-developer.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <text name="developer">
                <pos>.7 .935</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontSize>.02</fontSize>
                <metadata>developer</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </text>
             <image name="publisher-icon">
                <pos>.68 .97</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/_inc/images/icon-publisher.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <text name="publisher">
                <pos>.7 .97</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontSize>.02</fontSize>
                <metadata>publisher</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </text>

            <!-- Right Column Start-->

            <text name="sourceSystem">
                <pos>.78 .865</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <fontSize>.02</fontSize>
                <horizontalAlignment>right</horizontalAlignment>
                <text>System:</text>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </text>
            <text name="sourceSystemName">
                <pos>.885 .865</pos>
                <origin>0 .5</origin>
                <size>.107 .06</size>
                <fontSize>.02</fontSize>
                <metadata>sourceSystemFullname</metadata>
                <metadataElement>true</metadataElement>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>   
             <text name="releasedate">
                <pos>.78 .9</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <fontSize>.02</fontSize>
                <horizontalAlignment>right</horizontalAlignment>
                <text>Release Date:</text>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </text>
            <datetime name="releasedatedate">
                <pos>.885 .9</pos>
                <origin>0 .5</origin>
                <size>.107 .018</size>
                <fontSize>.02</fontSize>
                <format>%Y-%m-%d</format>
                <metadata>releasedate</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </datetime>
             
            <text name="playCount">
                <pos>.78 .935</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <fontSize>.02</fontSize>
                <horizontalAlignment>right</horizontalAlignment>
                <text>Play Count:</text>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </text>
            <text name="playCountNumber">
                <pos>.885 .935</pos>
                <origin>0 .5</origin>
                <size>.107 .018</size>
                <fontSize>.02</fontSize>
                <metadata>playcount</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            <text name="lastPlayed">
                <pos>.78 .97</pos>
                <origin>0 .5</origin>
                <size>.1 .018</size>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <fontSize>.02</fontSize>
                <horizontalAlignment>right</horizontalAlignment>
                <text>Last Played:</text>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </text>
            <datetime name="lastPlayedDate">    
                <pos>.885 .97</pos>
                <origin>0 .5</origin>
                <size>.107 .018</size>
                <fontSize>.02</fontSize>
                <metadata>lastplayed</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </datetime>

             <gamelistinfo name="gamelistInfo">
                <pos>0.99 0.8</pos>
                <origin>1 .5</origin>
                <size>w 0.02</size>
                <fontSize>0.025</fontSize>
                <fontPath>${rootpath}/_inc/fonts/Exo2-RegularCondensed.otf</fontPath>
                <horizontalAlignment>right</horizontalAlignment>
                <verticalAlignment>bottom</verticalAlignment>
                <color>BBBBBB</color>
                <backgroundColor>000000</backgroundColor>
                <zIndex>65</zIndex>
            </gamelistinfo>
        </view>
        

        <aspectRatio name="16:10">
            <view name="gamelist">
                <image name="fanarthue">
                    <pos>1 .5</pos>
                    <origin>.878 .5</origin>
                    <maxSize>1.5 1</maxSize>
                </image>
                <rating name="ratinggraphic">
                    <pos>.678 .865</pos>
                    <size>0 0.035</size>
                </rating>
                <text name="players, developer, publisher">
                    <size>.09 .018</size>
                </text>
            </view>
        </aspectRatio>

    </theme>