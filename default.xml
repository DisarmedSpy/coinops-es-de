<!--
    Variant - Default
-->

<theme>
    <include>./simple.xml</include>
    
        <view name="system">
            <image name="systembackgroundoverlay">
                <path>${rootpath}/core/images/paneloverlay.png</path>
            </image>
            <carousel name="systemCarousel">
                <pos>0 0.45</pos>
                <size>1 0.4</size>
                <horizontalOffset>-.275</horizontalOffset>
                <itemScale>1.35</itemScale>
                <selectedItemMargins>.02 .02</selectedItemMargins>
            </carousel>
            <text name="system-description">
                <text>${systemDescription}</text>
                <pos>0.1 0.77</pos><!-- 100 520 -->
                <size>0.5 0.2</size><!-- 516 194 -->
                <fontSize>0.024</fontSize><!-- 28 -->
                <!--<fontPath>${rootpath}/core/fonts/texgyre.otf</fontPath>-->
                <lineSpacing>1.1</lineSpacing>
                <color>BBBBBB</color>
                <verticalAlignment>top</verticalAlignment>
                <container>true</container>
                <containerStartDelay>0</containerStartDelay>
                <containerResetDelay>0</containerResetDelay>
             </text>
        </view>


        <view name="gamelist">
            <image name="fanarthue">
                <pos>1 1</pos>
                <origin>1 1</origin>
                <maxSize>1 1</maxSize>
                <path>${rootpath}/core/images/fanarthue.png</path>
                <zIndex>21</zIndex>
            </image>
            <image name="overbar">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/core/images/overbar.png</path>
                <zIndex>60</zIndex>
            </image>
            <image name="cover">
                <!--
                <pos>.52 .99</pos>
                <origin>0 1</origin>
                -->
                <pos>.61 .99</pos>
                <origin>.5 1</origin>
                <maxSize>.18 .30</maxSize>
                <imageType>cover</imageType>
                <zIndex>65</zIndex>
            </image>
            <text name="nametext">
                <pos>0.01 .825</pos>
                <size>.45 0</size>
                <metadata>name</metadata>
                <container>true</container>
                <containerStartDelay>1</containerStartDelay>
                <containerResetDelay>2</containerResetDelay>
                <fontPath>${rootpath}/core/fonts/Exo2-BoldCondensed.otf</fontPath>
                <color>BBBBBB</color>
                <zIndex>65</zIndex>
            </text>
            <badges name="badges">
                <pos>0.532 .871</pos>
                <origin>1 .5</origin>
                <size>.067 .067</size>
                <horizontalAlignment>right</horizontalAlignment>
                <direction>row</direction>
                <lines>1</lines>
                <slots>favorite</slots>
                <customBadgeIcon badge="favorite">${rootpath}/core/images/yes.png</customBadgeIcon>
                <controllerPos>0.5 0.572</controllerPos>
                <controllerSize>0.81</controllerSize>
                <folderLinkPos>0.54 0.64</folderLinkPos>
                <folderLinkSize>0.31</folderLinkSize>
                <itemMargin>-1.0 0.005</itemMargin>
                <zIndex>65</zIndex>
            </badges>
            <text name="descriptiontext">
                <pos>0.01 .8879</pos>
                <size>.5 .1222</size>
                <metadata>description</metadata>
                <container>true</container>
                <!--<fontPath>${rootpath}/core/fonts/Exo2-RegularCondensed.otf</fontPath>-->
                <fontSize>.019</fontSize>
                <color>BBBBBB</color>
                <lineSpacing>1.1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            <!--<image name="systemlogo">
                <pos>.8375 .9</pos>
                <origin>0 .5</origin>
                <maxSize>.15 .15</maxSize>
                <path>${rootpath}/${system.theme}/images/logo.png</path>
                <zIndex>65</zIndex>
             </image>-->
             <image name="releasedate-icon">
                <pos>.71 .865</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/core/images/icon-release-date.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <datetime name="releasedate">
                <pos>.73 .865</pos>
                <origin>0 .5</origin>
                <size>.1 .019</size>
                <fontSize>.02</fontSize>
                <format>%Y-%m-%d</format>
                <metadata>releasedate</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </datetime>
             <image name="players-icon">
                <pos>.71 .9</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/core/images/icon-players.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <text name="players">
                <pos>.73 .9</pos>
                <origin>0 .5</origin>
                <size>.1 .019</size>
                <fontSize>.02</fontSize>
                <metadata>players</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </text>
             <image name="developer-icon">
                <pos>.71 .935</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/core/images/icon-developer.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <text name="developer">
                <pos>.73 .935</pos>
                <origin>0 .5</origin>
                <size>.1 .019</size>
                <fontSize>.02</fontSize>
                <metadata>developer</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </text>
             <image name="publisher-icon">
                <pos>.71 .97</pos>
                <origin>0 .5</origin>
                <maxSize>.027 .027</maxSize>
                <path>${rootpath}/core/images/icon-publisher.svg</path>
                <color>BBBBBB</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
             </image>
             <text name="publisher">
                <pos>.73 .97</pos>
                <origin>0 .5</origin>
                <size>.1 .019</size>
                <fontSize>.02</fontSize>
                <metadata>publisher</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>BBBBBB</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
             </text>
             <rating name="ratinggraphic">
                <pos>0.86 .87</pos>
                <origin>0 0.5</origin>
                <size>0 0.04</size>
                <zIndex>65</zIndex>
            </rating>
             <gamelistinfo name="gamelistInfo">
                <pos>0.99 0.5</pos>
                <origin>1 .5</origin>
                <size>w 0.02</size>
                <fontSize>0.025</fontSize>
                <fontPath>${rootpath}/core/fonts/Exo2-RegularCondensed.otf</fontPath>
                <horizontalAlignment>right</horizontalAlignment>
                <verticalAlignment>bottom</verticalAlignment>
                <color>BBBBBB</color>
                <zIndex>65</zIndex>
            </gamelistinfo>
        </view>
        
        <view name="system, gamelist">
            <helpsystem name="help">
                <pos>0.5 0.005</pos>
                <origin>.5 0</origin>
                <textColor>BBBBBB</textColor>
                <iconColor>BBBBBB</iconColor>
                <fontSize>0.025</fontSize>
                <fontPath>${rootpath}/core/fonts/Exo2-RegularCondensed.otf</fontPath>
                <iconTextSpacing>0.003</iconTextSpacing>
            </helpsystem>
        </view>
    </theme>